{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "hooks/*": ["hooks/*"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "layouts/*": ["layouts/*"],
      "contexts/*": ["contexts/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "config/*": ["config/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
